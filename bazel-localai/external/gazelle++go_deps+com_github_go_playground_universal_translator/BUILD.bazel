load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "universal-translator",
    srcs = [
        "errors.go",
        "import_export.go",
        "translator.go",
        "universal_translator.go",
    ],
    importpath = "github.com/go-playground/universal-translator",
    visibility = ["//visibility:public"],
    deps = ["@com_github_go_playground_locales//:locales"],
)

alias(
    name = "go_default_library",
    actual = ":universal-translator",
    visibility = ["//visibility:public"],
)

go_test(
    name = "universal-translator_test",
    srcs = [
        "benchmarks_test.go",
        "import_export_test.go",
        "translator_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":universal-translator"],
    deps = [
        "@com_github_go_playground_locales//:locales",
        "@com_github_go_playground_locales//en",
        "@com_github_go_playground_locales//en_CA",
        "@com_github_go_playground_locales//nl",
    ],
)
