load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "en",
    srcs = ["en.go"],
    importpath = "github.com/go-playground/validator/v10/translations/en",
    importpath_aliases = ["github.com/go-playground/validator/translations/en"],
