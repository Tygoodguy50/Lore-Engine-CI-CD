load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library", "go_test")

go_library(
    name = "tomljson_lib",
    srcs = ["main.go"],
    importpath = "github.com/pelletier/go-toml/v2/cmd/tomljson",
    importpath_aliases = ["github.com/pelletier/go-toml/cmd/tomljson"],
    visibility = ["//visibility:private"],
    deps = [
        "//:go-toml",
        "//internal/cli",
    ],
)

go_binary(
    name = "tomljson",
    embed = [":tomljson_lib"],
    visibility = ["//visibility:public"],
)

go_test(
    name = "tomljson_test",
    srcs = ["main_test.go"],
    embed = [":tomljson_lib"],
    deps = [
        "@com_github_stretchr_testify//assert:go_default_library",
        "@com_github_stretchr_testify//require:go_default_library",
    ],
)
