load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go-toml",
    srcs = [
        "decode.go",
        "doc.go",
        "errors.go",
        "localtime.go",
        "marshaler.go",
        "strict.go",
        "types.go",
        "unmarshaler.go",
    ],
    importpath = "github.com/pelletier/go-toml/v2",
    importpath_aliases = ["github.com/pelletier/go-toml"],
    visibility = ["//visibility:public"],
    deps = [
        "//internal/characters",
        "//internal/danger",
        "//internal/tracker",
        "//unstable",
    ],
)

alias(
    name = "go_default_library",
    actual = ":go-toml",
    visibility = ["//visibility:public"],
)

go_test(
    name = "go-toml_test",
    srcs = [
        "errors_test.go",
        "example_text_marshaling_test.go",
        "fast_test.go",
        "fuzz_test.go",
        "localtime_test.go",
        "marshaler_test.go",
        "toml_testgen_support_test.go",
        "toml_testgen_test.go",
        "unmarshaler_test.go",
    ],
    data = glob(["testdata/**"]),
    embed = [":go-toml"],
    deps = [
        "//internal/testsuite",
        "//unstable",
        "@com_github_stretchr_testify//assert:go_default_library",
        "@com_github_stretchr_testify//require:go_default_library",
    ],
)
