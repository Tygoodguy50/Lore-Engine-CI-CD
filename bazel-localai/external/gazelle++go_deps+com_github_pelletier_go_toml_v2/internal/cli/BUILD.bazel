load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "cli",
    srcs = ["cli.go"],
    importpath = "github.com/pelletier/go-toml/v2/internal/cli",
    importpath_aliases = ["github.com/pelletier/go-toml/internal/cli"],
    visibility = ["//:__subpackages__"],
    deps = ["//:go-toml"],
)

alias(
    name = "go_default_library",
    actual = ":cli",
    visibility = ["//:__subpackages__"],
)

go_test(
    name = "cli_test",
    srcs = ["cli_test.go"],
    embed = [":cli"],
    deps = [
        "//:go-toml",
        "@com_github_stretchr_testify//assert:go_default_library",
        "@com_github_stretchr_testify//require:go_default_library",
    ],
)
