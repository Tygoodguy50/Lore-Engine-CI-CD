load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "chacha20",
    srcs = [
        "chacha_arm64.go",
        "chacha_arm64.s",
        "chacha_generic.go",
        "chacha_noasm.go",
        "chacha_ppc64le.go",
        "chacha_ppc64le.s",
        "chacha_s390x.go",
        "chacha_s390x.s",
        "xor.go",
    ],
    importpath = "golang.org/x/crypto/chacha20",
    visibility = ["//visibility:public"],
    deps = [
        "//internal/alias",
    ] + select({
        "@io_bazel_rules_go//go/platform:s390x": [
            "@org_golang_x_sys//cpu",
