alias(
    name = "go_default_library",
    actual = ":chacha20",
    visibility = ["//visibility:public"],
)

go_test(
    name = "chacha20_test",
    srcs = [
        "chacha_test.go",
        "vectors_test.go",
    ],
    embed = [":chacha20"],
