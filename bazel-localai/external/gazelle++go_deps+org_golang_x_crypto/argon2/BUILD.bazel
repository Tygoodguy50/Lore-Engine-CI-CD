load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "argon2",
    srcs = [
        "argon2.go",
        "blake2b.go",
        "blamka_amd64.go",
        "blamka_amd64.s",
        "blamka_generic.go",
        "blamka_ref.go",
    ],
    importpath = "golang.org/x/crypto/argon2",
    visibility = ["//visibility:public"],
    deps = [
        "//blake2b",
    ] + select({
        "@io_bazel_rules_go//go/platform:amd64": [
            "@org_golang_x_sys//cpu",
        ],
        "//conditions:default": [],
    }),
)

alias(
    name = "go_default_library",
    actual = ":argon2",
    visibility = ["//visibility:public"],
)

go_test(
    name = "argon2_test",
    srcs = ["argon2_test.go"],
    embed = [":argon2"],
)
