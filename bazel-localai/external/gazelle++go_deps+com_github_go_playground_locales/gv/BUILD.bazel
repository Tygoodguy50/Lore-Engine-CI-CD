load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "gv",
    srcs = ["gv.go"],
    importpath = "github.com/go-playground/locales/gv",
    visibility = ["//visibility:public"],
    deps = [
        "//:locales",
        "//currency",
