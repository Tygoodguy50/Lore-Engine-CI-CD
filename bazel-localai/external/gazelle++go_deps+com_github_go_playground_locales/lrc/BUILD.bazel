load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "lrc",
    srcs = ["lrc.go"],
    importpath = "github.com/go-playground/locales/lrc",
    visibility = ["//visibility:public"],
    deps = [
        "//:locales",
        "//currency",
    ],
