load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "sse",
    srcs = [
        "sse-decoder.go",
        "sse-encoder.go",
        "writer.go",
    ],
    importpath = "github.com/gin-contrib/sse",
    visibility = ["//visibility:public"],
)

alias(
    name = "go_default_library",
    actual = ":sse",
    visibility = ["//visibility:public"],
