load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go-urn",
    srcs = [
        "machine.go",
        "urn.go",
    ],
    importpath = "github.com/leodido/go-urn",
    visibility = ["//visibility:public"],
)

alias(
    name = "go_default_library",
    actual = ":go-urn",
    visibility = ["//visibility:public"],
)

go_test(
    name = "go-urn_test",
    srcs = [
        "examples_test.go",
        "machine_test.go",
        "performance_test.go",
        "tables_test.go",
        "urn_test.go",
    ],
    embed = [":go-urn"],
    deps = ["@com_github_stretchr_testify//assert:go_default_library"],
)
