load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "magic",
    srcs = [
        "archive.go",
        "audio.go",
        "binary.go",
        "database.go",
        "document.go",
        "font.go",
        "ftyp.go",
        "geo.go",
        "image.go",
        "magic.go",
        "ms_office.go",
        "ogg.go",
        "text.go",
        "text_csv.go",
        "video.go",
        "zip.go",
    ],
    importpath = "github.com/gabriel-vasile/mimetype/internal/magic",
    visibility = ["//:__subpackages__"],
    deps = [
        "//internal/charset",
        "//internal/json",
