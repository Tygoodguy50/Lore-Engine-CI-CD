# üï∏Ô∏è LocalAI Haunted Hooks Configuration
# Copy this file to config.env and fill in your actual values

# ===== Core Server Configuration =====
PORT=8081
GIN_MODE=release
LOG_LEVEL=info

# ===== Discord Integration =====
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# ===== TikTok Webhook Integration =====
TIKTOK_WEBHOOK_URL=https://your-tiktok-webhook-endpoint.com/webhook
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here
TIKTOK_VIRAL_THRESHOLD=0.8

# ===== Markdown Injector Configuration =====
MARKDOWN_OUTPUT_DIR=./docs/haunted
MARKDOWN_TEMPLATE_DIR=./templates/haunted
MARKDOWN_AUTO_COMMIT=false
MARKDOWN_GIT_REPO=https://github.com/your-username/your-repo.git

# ===== n8n/LangChain Integration =====
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/haunted
N8N_API_KEY=your_n8n_api_key_here
LANGCHAIN_URL=https://your-langchain-endpoint.com/api
AGENT_MODE=true
ARG_ENABLED=true
N8N_WORKFLOW_ID=your_workflow_id_here

# ===== Haunted System Configuration =====
CURSED_MODE=true
LORE_LEVEL_DEFAULT=5
SENTIMENT_THRESHOLD=0.5
MAX_LORE_TRIGGERS=100
HAUNTED_DEBUG=false

# ===== Security & API Keys =====
# Add your API keys here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
AZURE_OPENAI_KEY=your_azure_openai_key_here

# ===== Performance & Limits =====
MAX_CONCURRENT_EVENTS=10
EVENT_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_SECONDS=10

# ===== Development & Debug =====
DEBUG_WEBHOOKS=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_METRICS=true
METRICS_PORT=9090
