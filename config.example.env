# Example environment configuration (sanitized)
# Copy to config.env and fill with real values (never commit real secrets)

# ===== Core Server Configuration =====
PORT=8081
GIN_MODE=release
LOG_LEVEL=info

# ===== Discord Integration =====
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_CHANNEL_ID=YOUR_DISCORD_CHANNEL_ID
DISCORD_GUILD_ID=YOUR_DISCORD_GUILD_ID
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/XXXXXXXX/XXXXXXXXXXXXXXXXXXXX

# ===== TikTok Webhook Integration =====
TIKTOK_WEBHOOK_URL=https://example.com/webhook
TIKTOK_ACCESS_TOKEN=YOUR_TIKTOK_ACCESS_TOKEN
TIKTOK_VIRAL_THRESHOLD=0.8

# ===== Markdown Injector Configuration =====
MARKDOWN_OUTPUT_DIR=./docs/haunted
MARKDOWN_TEMPLATE_DIR=./templates/haunted
MARKDOWN_AUTO_COMMIT=false
MARKDOWN_GIT_REPO=https://github.com/your-username/your-repo.git

# ===== n8n / LangChain Integration =====
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/haunted
N8N_API_KEY=YOUR_N8N_KEY
LANGCHAIN_URL=https://your-langchain-endpoint.com/api
AGENT_MODE=true
ARG_ENABLED=true
N8N_WORKFLOW_ID=YOUR_WORKFLOW_ID

# ===== Haunted System Configuration =====
CURSED_MODE=true
LORE_LEVEL_DEFAULT=5
SENTIMENT_THRESHOLD=0.5
MAX_LORE_TRIGGERS=100
HAUNTED_DEBUG=false

# ===== Email Marketing (ConvertKit) =====
CONVERTKIT_API_KEY=CK_PUBLIC_KEY_PLACEHOLDER
CONVERTKIT_API_SECRET=CK_SECRET_PLACEHOLDER
CONVERTKIT_FORM_ID=FORM_ID_PLACEHOLDER

# ===== Social Media (Twitter/X) =====
TWITTER_BEARER_TOKEN=TWITTER_BEARER_PLACEHOLDER
TWITTER_API_KEY=TWITTER_KEY_PLACEHOLDER
TWITTER_API_SECRET=TWITTER_SECRET_PLACEHOLDER

# ===== Payment Processing (Stripe) =====
STRIPE_SECRET_KEY=sk_live_REDACTED
STRIPE_PUBLISHABLE_KEY=pk_live_REDACTED

# ===== Analytics =====
GA_TRACKING_ID=G-XXXXXXXXXX

# ===== Performance & Limits =====
MAX_CONCURRENT_EVENTS=10
EVENT_TIMEOUT_SECONDS=30
RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT_SECONDS=10

# ===== Development & Debug =====
DEBUG_WEBHOOKS=false
MOCK_EXTERNAL_SERVICES=false
ENABLE_METRICS=true
METRICS_PORT=9090

# All real secrets belong ONLY in local, untracked config.env
